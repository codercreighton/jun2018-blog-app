<!DOCTYPE html>
<html>
  <head>
    <title>Jun2018BlogApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  	<div class="container">
  		<div class="container">
			  <div class="pull-right">
			    <% if user_signed_in? %>
			    <p>Welcome <%= current_user.email %>
			      <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-danger" %></p>
			    <% end %>
			  </div>
    	<%= yield %>
  </div>
  </body>
</html>
